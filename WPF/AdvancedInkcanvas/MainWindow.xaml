<Window x:Class="AdvancedInkcanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedInkcanvas"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="NoneModeBtn"
                    Content="None"
                    Click="NoneModeBtn_OnClick"></Button>
            <Button x:Name="SelectMode"
                    Content="Select"
                    Click="SelectMode_OnClick">
            </Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <local:CustomRenderingInkCanvas x:Name="CustomInkCanvas"></local:CustomRenderingInkCanvas>
        </Grid>
    </Grid>
</Window>
