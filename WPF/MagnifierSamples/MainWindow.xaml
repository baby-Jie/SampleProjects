<Window x:Class="MagnifierSamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagnifierSamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">

            <Button x:Name="StartMagnifyBtn"
                    Content="Magnify"
                    Click="StartMagnifyBtn_Click">
            </Button>

            <Button x:Name="StopMagnityBtn"
                    Content="Stop Magnify"
                    Click="StopMagnityBtn_Click">
            </Button>

        </StackPanel>
    </Grid>
</Window>
