<Window x:Class="AutoRunApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoRunApplication"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <StackPanel Margin="20">

            <Button x:Name="AutoRunBtn"
                    Content="Auto Run"
                    Click="AutoRunBtn_OnClick">
            </Button>

            <Button x:Name="CancelAutoRunBtn"
                    Content="Cancel Auto Run"
                    Click="CancelAutoRunBtn_OnClick">

            </Button>
        </StackPanel>
    </Grid>
</Window>
