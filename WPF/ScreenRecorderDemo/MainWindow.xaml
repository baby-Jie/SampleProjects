<Window x:Class="ScreenRecorderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenRecorderDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <StackPanel x:Name="MainPanel">
            <Button x:Name="InitialBtn"
                    Content="Initial"
                    Click="InitialBtn_OnClick">
            </Button>

            <Button x:Name="StartRecordBtn"
                    Content="Start Record"
                    Click="StartRecordBtn_OnClick">
            </Button>

            <Button x:Name="PasueRecordBtn"
                    Content="Pause Record"
                    Click="PasueRecordBtn_OnClick">
            </Button>

            <Button x:Name="StopRecordBtn"
                    Content="Stop Record"
                    Click="StopRecordBtn_OnClick">
            </Button>

            <Button x:Name="RecordAudioBtn"
                    Content="Only Record Audio"
                    Click="RecordAudioBtn_OnClick">
            </Button>
        </StackPanel>
    </Grid>
</Window>
